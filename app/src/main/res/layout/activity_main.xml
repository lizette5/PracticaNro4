<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context=".MainActivity">


    <!---Area de Registro-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="LISTA DE ESTUDIANTES"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/ListView1"
                android:layout_width="match_parent"
                android:layout_height="329dp"
                android:layout_margin="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/blood2"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_margin="20dp"
                android:background="@color/blood2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Datos del Estudiante"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/nombreEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/inputs"
                    android:enabled="false"
                    android:hint="Nombre y apellidos del estudiante"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="#bdc7d8"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/cuiEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/inputs"
                    android:enabled="false"
                    android:hint="CUI del estudiante"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="#bdc7d8"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/sendregistro"
                    android:layout_width="151dp"
                    android:layout_height="66dp"
                    android:gravity="bottom|center"
                    android:text="Registrar estudiante"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/modificar"
                    android:layout_width="127dp"
                    android:layout_height="66dp"
                    android:gravity="bottom|center"
                    android:text="Editar al Estudiante"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>